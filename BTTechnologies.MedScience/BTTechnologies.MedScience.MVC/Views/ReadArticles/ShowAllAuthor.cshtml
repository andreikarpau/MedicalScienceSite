@using BTTechnologies.MedScience.MVC.Models
@model AllAuthorsModel

@{
    ViewBag.Title = MedSiteStrings.AllAuthors;
}

@if (!Model.AllAuthors.Any())
{
    <div class="centered-note middle-big-text">@MedSiteStrings.NoAuthorsFound</div>    
}
else
{
    <ul id="AllArticlesUl">
        @foreach (AuthorInfoModel author in Model.AllAuthors.OrderBy(a => a.FullName))
        {
            <li>
                @Html.ActionLink(author.FullName, "ShowAuthorArticles", new { id = author.AuthorId })
                <div class="all-articles-small-description">@author.AuthorDegree</div>
                <div class="all-articles-very-small-description">@string.Format(MedSiteStrings.AuthorHasNArticles, author.ArticlesCount)</div>
            </li>
        }    
    </ul>
}
